<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="Impostazioni">
    
    <CheckBoxPreference android:title="Dark Theme" android:defaultValue="true" android:key="darktheme" /><EditTextPreference android:summary="Milisegundos" android:title="Periodo de muestreo GPS" android:key="refreshrate" android:defaultValue="1000"/><EditTextPreference android:summary="Seconds" android:title="Network timeout" android:key="timeout" android:defaultValue="30"/><PreferenceCategory android:title="Online">
        
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="live"
            android:title="Monitoraggio live"/>

                    <PreferenceScreen android:title="Opzioni di monitoraggio" android:dependency="live">
                            <EditTextPreference
                                android:digits="0123456789"
                                android:inputType= "number"
                                android:key= "period"
                                android:numeric= "integer"
                                android:summary= "Millisecondi "
                                android:title= "Periodo di invio" android:defaultValue= "5000"/>
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "distance"
                                android:numeric= "integer"
                                android:summary= "Metros "
                                android:title= "Distanza di invio" android:defaultValue= "0"/>
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "bearing"
                                android:numeric= "integer"
                                android:summary= "Gradi "
                                android:title= "Deviazione del tracciato" android:defaultValue= "0"/>
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "speedbearing"
                                android:summary= "chilometri all'ora"
                                android:title="Soglia di velocità per la devizione dalla rotta" android:defaultValue="5" />
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "hdop"
                                android:numeric= "integer"
                                android:summary= "Metri"
                                android:title= "Errore massimo HDOP" android:defaultValue= "30"/>
                            <EditTextPreference
                                android:key= "speed"
                                android:title= "velocità minima per invio "
                                android:summary= "chilometri per ora "
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:defaultValue= "0"/>
                            <CheckBoxPreference android:key="modeAND" android:title="Modo Y" android:defaultValue="false" android:summary="Modalità predefinita O"/>
                            <CheckBoxPreference
                                android:key= "usebuffer"
                                android:title= "Trasferimento non inviato"
                                android:summary= "Utile per connessioni internet instabili. Può incrementare il traffico web."
                                android:defaultValue= "false"/>
                            
                    </PreferenceScreen>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Disconnesso">

        <CheckBoxPreference
            android:defaultValue= "false"
            android:key= "gpx"
            android:summary= "Le tracce sono salvate di default nella scheda di memoria (/sdcard/OsMoDroid/)"
            android:title= "Guardar pista"/>

                <PreferenceScreen android:title="Opzioni di salvataggio" android:dependency="gpx">
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "period_gpx"
                            android:numeric= "integer"
                            android:summary= "Millisecondi"
                            android:title= "Intervallo di salvataggio" android:defaultValue= "1000"/>
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "distance_gpx"
                            android:numeric= "integer"
                            android:summary= "Metri"
                            android:title= "Distanza di salvataggio " android:defaultValue= "0"/>
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "bearing_gpx"
                            android:numeric= "integer"
                            android:summary= "Gradi"
                            android:title= "Deviazione dal percorso" android:defaultValue= "0"/>
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "speedbearing_gpx"
                            android:summary= "chilomtetri all'ora"
                            android:title= "Soglia di velocità per la deviazione dal percorso" android:defaultValue= "0"/>
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "hdop_gpx"
                            android:numeric= "integer"
                            android:summary= "Metros"
                            android:title= "Precisione accettabile" android:defaultValue= "30"/>
                        <EditTextPreference
                            android:digits= "0123456789"
                            android:inputType= "number"
                            android:key= "speed_gpx"
                            android:numeric= "integer"
                            android:summary= "chilometri all'ora"
                            android:title= "Velocità minima per il salvataggio ​"
                            android:defaultValue= "0"/>
                        <CheckBoxPreference android:key="modeAND_gpx" android:title="Modo Y o O" android:defaultValue="false"/>
                        <EditTextPreference android:title="percorso SDcard" android:key="sdpath"/>
                </PreferenceScreen>
                    
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Più">

                    <PreferenceScreen android:title="Notifiche" >
                            <CheckBoxPreference
                                android:key= "vibrate"
                                android:title= "Vibrazione alla disconnesione di Internet o GPS"
                                android:defaultValue= "false"/>
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "vibratetime"
                                android:numeric= "integer"
                                android:summary= "Millisecondi"
                                android:title= "Intervallo di vibrazione"
                                android:defaultValue= "500"/>
                            <CheckBoxPreference
                                android:key= "playsound"
                                android:title= "Suona quando viene perso internet o GPS"
                                android:defaultValue= "false"/>
                            <EditTextPreference
                                android:digits= "0123456789"
                                android:inputType= "number"
                                android:key= "notifyperiod"
                                android:numeric= "integer"
                                android:summary= "Millisecondi"
                                android:title= "Tempo di indisponibilità del GPS"
                                android:defaultValue= "60000"/>
                            <CheckBoxPreference
                                android:key= "sendsound"
                                android:title= "Suona all'invio"
                                android:defaultValue= "false"/>
                            
                            <CheckBoxPreference
                                android:key= "silentnotify"
                                android:title= "Nessuna notifica"
                                android:defaultValue= "false"/>
                            <CheckBoxPreference
                                android:key= "onlinenotify"
                                android:title= "Avvisa alla connessione"
                                android:defaultValue= "false"
                                android:summary= "Nitifica del cambio dello stato dei tuoi dispositivi connessi"/>
                            <CheckBoxPreference
                                android:key= "statenotify"
                                android:title= "Notifiche con monitoraggio"
                                android:defaultValue= "false"
                                android:summary= "Notifiche di stato per monitorare i tuoi dispositivi"/>
                            <CheckBoxPreference
                                android:summary= "Utilizza l'allarme"
                                android:key= "usealarm"
                                android:title= "Allarme"
                                android:defaultValue= "false"/>
                            <EditTextPreference
                                android:title= "Sensibilità"
                                android:summary= "Accelerazione per attivare l'allarme"
                                android:key= "sensivity" android:defaultValue= "2"/><CheckBoxPreference android:key="usetts" android:summary="Use text-to-speech" android:title="Speak Speed" android:defaultValue="false" /><PreferenceCategory android:dependency="usetts" android:title="@string/tts_settings">
                                <CheckBoxPreference android:title="Проговаривать текущую скорость" android:key="ttsspeed"/>
                                <CheckBoxPreference android:title="Проговаривать среднюю скорость" android:key="ttsavgspeed"/>
                                <CheckBoxPreference android:title="Проговаривать удаленные команды" android:key="ttsremote"/>
                            </PreferenceCategory><CheckBoxPreference android:title="@string/speak_current_speed" android:key="ttsspeed"/><CheckBoxPreference android:title="@string/speak_average_speed" android:key="ttsavgspeed"/><CheckBoxPreference android:title="Speak remote comands" android:key="ttsremote"/>

                    </PreferenceScreen>

        <CheckBoxPreference
            android:key= "usewake"
            android:summary= "Aumenta il consumo di energia"
            android:title= "Non spegnere lo schermo"
            android:defaultValue= "false"/>
        <CheckBoxPreference
            android:key= "usegps"
            android:summary= "Usato per determinare le coordinate GPS"
            android:title= "GPS"
            android:defaultValue= "true"/>
        <CheckBoxPreference
            android:key= "usenetwork"
            android:summary= "Determinare le coordinate usando le reti telefoniche e reti Wi-Fi (traffico Internet aggiuntivo)"
            android:title= "Reti mobili"
            android:defaultValue= "true"/>
        <CheckBoxPreference
            android:key= "autostart"
            android:summary= "Lanciare il servizio in background all'avvio del telefono."
            android:title= "Iniziare all'accensione"
            android:defaultValue= "false"/>
        
    </PreferenceCategory>
    
    
</PreferenceScreen>